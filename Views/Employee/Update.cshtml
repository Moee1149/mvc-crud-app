@model MyMvcApp.ViewModels.EmployeeViewModel

<h2 class="font-bold mb-4 text-center text-lg">Update Student Detail</h2>

<form asp-action="Edit" method="post" class="w-[400px] mx-auto">
    <div class="mb-3 flex gap-3 items-center">
        <label>Name:</label>
        <input asp-for="Name" class="border w-full p-1" /><br />
    </div>

    <div class="mb-3 flex gap-3 items-center">
        <label>Email:</label>
        <input asp-for="Email" class="border w-full p-1" /><br />
    </div>

    <div class="mb-3 flex gap-3 items-center">
        <label>Department:</label>
        <input asp-for="Department" class="border w-full p-1" /><br />
    </div>

    <div class="mb-3 flex gap-3 items-center">
        <label>HireDate:</label>
        <input asp-for="HireDate" type="date" class="border w-full p-1" /><br />
    </div>

    <button type="submit" class="border p-2 w-full rounded-lg hover:bg-gray-100">Save</button>
</form>